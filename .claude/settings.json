{
  "includeCoAuthoredBy": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '.env'; then exit 2; fi; }"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -Eiq '\\.(ts|mts|tsx|js|mjs|jsx|json|css|html)$'; then [ -x ./node_modules/.bin/prettier ] && pnpm exec prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code\" -subtitle \"Awaiting\" -message \"‚û°Ô∏è $(jq -r '.message')\" -appIcon \"https://claude.ai/images/claude_app_icon.png\" -activate \"com.mitchellh.ghostty\" -ignoreDnD"
          },
          {
            "type": "command",
            "command": "~/.claude/bin/set-title.sh \"üí¨ $(basename \"$CLAUDE_PROJECT_DIR\")\""
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/set-title.sh \"üí¨ $(basename \"$CLAUDE_PROJECT_DIR\")\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code\" -message \"‚úÖ Done!\" -appIcon \"https://claude.ai/images/claude_app_icon.png\" -activate \"com.mitchellh.ghostty\" -ignoreDnD"
          },
          {
            "type": "command",
            "command": "~/.claude/bin/set-title.sh \"ü§ñ $(basename \"$CLAUDE_PROJECT_DIR\")\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/set-title.sh \"‚ö° $(basename \"$CLAUDE_PROJECT_DIR\")\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/bin/set-title.sh \"ü§ñ $(basename \"$CLAUDE_PROJECT_DIR\")\""
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if [ -n \"$TMUX\" ]; then tmux set-window-option automatic-rename on; else ~/.claude/bin/set-title.sh \"$(basename \"$PWD\")\"; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/bin/statusline.sh"
  },
  "enabledPlugins": {
    "osgrep@osgrep": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(go:*)",
      "Bash(ls:*)",
      "Bash(git:*)",
      "Bash(mv:*)",
      "Bash(echo:*)",
      "Bash(sed:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pkill:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(sqlite3:*)",
      "Bash(curl:*)",
      "Bash(rg:*)",
      "Bash(chmod:*)",
      "Bash(lsof:*)",
      "Bash(make:*)",
      "Bash(PORT=:*)",
      "Bash(find:*)",
      "Bash(docker:*)",
      "Bash(python3:*)",
      "Update(*:*)",
      "Update(*)",
      "Write(*)"
    ],
    "deny": []
  }
}
